{

  "manifest_version": 2,
  "name": "Tap Out",
  "author": "k88hudson",
  "version": "0.1.0",
  "description": "Block sites in some containers during work hours",
  "permissions": [
    "<all_urls>",
    "cookies",
    "contextualIdentities",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking"
   ],

   "background": {
    "scripts": [
     "js/background.js"
    ]
   },

   "icons": {
      "48": "icons/alarm.svg"
    },

   "web_accessible_resources": [
    "blocker.html"
   ],

   "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "open_in_tab": false
   },

   "browser_specific_settings": {
    "gecko": {
      "id": "tapout@katehudson.ca",
      "strict_min_version": "80.0"
    }
  }

}
